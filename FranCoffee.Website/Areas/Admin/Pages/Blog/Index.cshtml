@page
@model FranCoffee.Website.Areas.Admin.Pages.Blog.IndexModel
@{
}


@section custom_head{
    <!-- DataTables -->
    <link rel="stylesheet" href="/admin/plugins/datatables-bs4/css/dataTables.bootstrap4.css">
    <!-- Toastr -->
    <link rel="stylesheet" href="/admin/plugins/toastr/toastr.min.css">
}


<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Danh sách bài viết</h1>
                </div><!-- /.col -->
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item active">Danh sách bài viết</li>
                    </ol>
                </div><!-- /.col -->
            </div><!-- /.row -->
        </div><!-- /.container-fluid -->
    </div>
    <!-- /.content-header -->
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Bảng danh sách bài viết</h3>
                        <a class="btn btn-sm float-right btn-primary" href="/admin/blog/add">Thêm mới</a>
                    </div>

                    <!-- /.card-header -->
                    <div class="card-body">
                        <table id="tbl-main" class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Thao tác</th>
                                    <th>STT</th>
                                    <th>Tiêu đề</th>
                                    <th>Thuộc về</th>
                                    <th>Ngày đăng</th>
                                    <th>Tác giả</th>
                                    <th>Hiển thị</th>
                                </tr>
                            </thead>
                            <tbody>

                                @for (var i = 0; i < Model.Posts.Count; i++)
                                {
                                    var post = Model.Posts[i];
                                    <tr>
                                        <td><a href="/admin/blog/@post.Id">CHI TIẾT</a></td>
                                        <td>@(i + 1)</td>
                                        <td>@post.Title</td>
                                        <td>@(post.BranchId != null ? post.BranchName : "Hệ thống")</td>
                                        <td>@post.Date?.ToVNDateTime().ToString("dd/MM/yyyy")</td>
                                        <td>@post.Author</td>
                                        <td>@(post.Visible == true?"Có":"Không")</td>
                                    </tr>
                                }

                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>Thao tác</th>
                                    <th>STT</th>
                                    <th>Tiêu đề</th>
                                    <th>Thuộc về</th>
                                    <th>Ngày đăng</th>
                                    <th>Tác giả</th>
                                    <th>Hiển thị</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
                <!-- /.card -->

            </div>
            <!-- /.col -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->

@section custom_script{

    <!-- DataTables -->
    <script src="/admin/plugins/datatables/jquery.dataTables.js"></script>
    <script src="/admin/plugins/datatables-bs4/js/dataTables.bootstrap4.js"></script>
    <!-- Toastr -->
    <script src="/admin/plugins/toastr/toastr.min.js"></script>

    <script>
        pageInit();
        function pageInit() {
            $("#tbl-main").DataTable();

            let mess = "@Model.Message";
            let mess_type = "@Model.MessageType";
            if (mess) {
                if (mess_type == "success")
                    toastr.success(mess);
                if (mess_type == "error")
                    toastr.error(mess);

                window.history.replaceState({}, "", location.pathname);
            }
        }
    </script>
}