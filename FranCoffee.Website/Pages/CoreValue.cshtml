@page "/gia-tri-cot-loi"
@model FranCoffee.Website.Pages.CoreValueModel
@{
}

@section custom_head{
<style>

    .ftco-services {
        background-image: radial-gradient(#fff, #fcf0de, #c49b63)
    }

    .services .icon {
        border-radius: 7px;
    }
</style>

}

<section class="common-slider owl-carousel">

    <div class="slider-item" style="background-image: url(/images/bg_1.jpg?v=31032020);" data-stellar-background-ratio="0.5">
        <div class="overlay"></div>
        <div class="container">
            <div class="row slider-text justify-content-center align-items-center">
                <div class="slider-content pb-5 col-md-7 col-sm-12 text-center ftco-animate">
                    @Model.L["slider_content"]
                </div>
            </div>
        </div>
    </div>
</section>

<section class="ftco-about d-md-flex">
    <div class="one-half img" style="background-image: url(/images/corevalue.jpg?v=31032020);"></div>
    <div class="one-half ftco-animate">
        <div class="overlap">
            @Model.L["section_core_value"]
        </div>
    </div>
</section>

<section class="ftco-section ftco-services">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-4 ftco-animate">
                <div class="media d-block text-center block-6 services">
                    <div class="icon d-flex justify-content-center align-items-center mb-5">
                        <img src="~/images/customer.png?v=31032020" class="img img-fluid" />
                    </div>
                    <div class="media-body">
                        @Model.L["service1"]
                    </div>
                </div>
            </div>
            <div class="col-md-4 ftco-animate">
                <div class="media d-block text-center block-6 services">
                    <div class="icon d-flex justify-content-center align-items-center mb-5">
                        <img src="~/images/inno.png?v=31032020" class="img img-fluid" />
                    </div>
                    <div class="media-body">
                        @Model.L["service2"]

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
