<section class="ftco-appointment">
    <div class="overlay"></div>
    <div class="container-wrap">
        <div class="row no-gutters d-md-flex align-items-center">
            <!--<div class="col-md-6 d-flex align-self-stretch">-->
            <div class="col-md-6 p-md-5 p-3 mb-5 mt-5">
                <!--<div id="map"></div>-->
                @Model.L["section_franchise_procedure"]
            </div>

            @{
                var formDetails = Model.L["register_form_details"].Value.Split('_');

            }
            <div class="col-md-6 appointment ftco-animate">
                <!--Register header-->
                <h3 class="mb-3">@formDetails[0]</h3>
                <form asp-page="mail" asp-page-handler="register" class="appointment-form" method="post">
                    <div class="d-md-flex">
                        <div class="form-group">
                            <!--Full name-->
                            <input type="text" name="full_name" class="form-control" placeholder="@formDetails[1]">
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <!--Email-->
                            <input type="text" name="email" class="form-control" placeholder="@formDetails[2]">
                        </div>
                        <div class="form-group ml-md-4">
                            <!--Phone-->
                            <input type="text" name="phone" class="form-control" placeholder="@formDetails[3]">
                        </div>
                    </div>
                    <div class="d-md-flex">
                        <div class="form-group">
                            <!--Message-->
                            <textarea name="message"
                                      id="" cols="30" rows="2" class="form-control" placeholder="@formDetails[4]"></textarea>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="text-center">
                            <input type="submit" value="@formDetails[5]" class="btn btn-primary py-3 px-4">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<section class="ftco-section ftco-blog-post">
    <div class="container">
        <div class="row justify-content-center mt-3 mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                @Model.L["section_blog_heading"]
            </div>
        </div>
        <div class="row d-flex">

            @foreach (var p in Model.RecentPosts)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <a href="/chi-tiet-bai-viet/@p.Id"
                           class="block-20">
                            <img class="img img-fluid w-100 h-100" @(p.ThumbnailUrl != null ? Html.Raw($"src=\"{p.ThumbnailUrl}\"") : Html.Raw("")) />
                        </a>
                        <div class="text py-4 d-block">
                            <div class="meta">
                                <div><a href="#"><span class="icon-calendar"></span>&nbsp; @p.Date?.ToVNDateTime().ToString("dd/MM/yyyy")</a></div>
                                <div><a href="#"><span class="icon-person"></span> @p.Author</a></div>
                            </div>
                            <div class="tag-widget post-tag-container">
                                <div class="tagcloud">
                                    @if (p.Tags != null)
                                    {
                                        @foreach (var t in p.Tags)
                                        {
                                            <a href="#" class="tag-cloud-link">@t</a>
                                        }
                                    }
                                </div>
                            </div>
                            <h3 class="heading mt-2"><a href="/chi-tiet-bai-viet/@p.Id">@p.Title</a></h3>
                            <p>@p.PostDescription</p>
                        </div>
                    </div>
                </div>
            }

            <p class="text-center w-100">
                <a href="/bai-viet" class="btn btn-primary btn-outline-primary p-3 px-xl-4 py-xl-3">@Model.L["blog_btn"]</a>
            </p>
        </div>

    </div>
</section>

@section custom_script{
    <script>
        pageInit();
        function pageInit() {
            $('.gallery.img').magnificPopup({
                gallery: {
                    enabled: true
                },
                type: 'image' // this is default type
            });

            $('.slider-core-vl').owlCarousel({
                loop: true,
                autoplay: true,
                margin: 0,
                animateOut: 'fadeOut',
                animateIn: 'fadeIn',
                nav: false,
                autoplayTimeout: 2500,
                autoplayHoverPause: false,
                items: 1,
                navText: ["<span class='ion-md-arrow-back'></span>", "<span class='ion-chevron-right'></span>"],
                responsive: {
                    0: {
                        items: 1,
                        nav: false
                    },
                    600: {
                        items: 1,
                        nav: false
                    },
                    1000: {
                        items: 1,
                        nav: false
                    }
                }
            });

        }
    </script>
}