</section>

<section class="ftco-section ftco-blog-post">
    <div class="container">
        <div class="row justify-content-center mt-3 mb-5 pb-3">
            <div class="col-md-7 heading-section ftco-animate text-center">
                @Model.L["section_branches"]
            </div>
        </div>
        <div class="row d-flex">

            @foreach (var b in Model.NewestBranches)
            {
                <div class="col-md-4 d-flex ftco-animate">
                    <div class="blog-entry align-self-stretch">
                        <a href="/thong-tin-cua-hang/@b.Id" class="block-20">
                            @{
                                if (b.ImageUrl != null)
                                {
                                    <img src="@b.ImageUrl" class="img img-fluid w-100 h-100" />
                                }
                            }
                        </a>
                        <div class="text py-4 d-block">
                            <div class="meta">
                                <div>
                                    <a href="#">
                                        <span class="icon-map-marker"></span>&nbsp;
                                        @b.Address
                                    </a>
                                </div>
                            </div>
                            <h3 class="heading mt-2">
                                <a href="/thong-tin-cua-hang/@b.Id">
                                    @b.Name
                                </a>
                            </h3>
                            <p>@b.Description</p>
                        </div>
                    </div>
                </div>
            }

            <p class="text-center w-100">
                <a href="/he-thong-aplus-coffee" class="btn btn-primary btn-outline-primary p-3 px-xl-4 py-xl-3">@Model.L["branch_btn"]</a>
            </p>
        </div>

    </div>
</section>

