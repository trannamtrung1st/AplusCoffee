            .ftco-intro .info {
                margin-top: 130px;
            }

            .slider-core-vl {
                padding-left: 50px;
                padding-top: 80px;
            }
        }
        .slider-core-vl {
            height: 400px !important;
            margin-bottom: 70px;
        }

        .owl-carousel.slider-core-vl .owl-dots{
