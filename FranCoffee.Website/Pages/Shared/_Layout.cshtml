    <script>
        function showSearchInp() {
            $(".search-overlay").show();
            $(".search-inp input").focus();
        }

        function closeSearchInp() {
            $(".search-overlay").hide();
        }

        function enableScroll() {
            $('html').css({ 'overflow-y': 'unset' });
        }
        function disableScroll() {
            $('html').css({ 'overflow-y': 'hidden' });
        }

        var toggleScroll = (function () {
            var enable = true;
            return function () {
                enable = !enable;
                if (enable)
                    enableScroll();
                else disableScroll();
            }
        })();

        pageInit();
        function pageInit() {
        }

    </script>

