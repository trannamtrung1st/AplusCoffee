                        <div class="dropdown-menu" aria-labelledby="dropdown04">
                            <a class="dropdown-item" href="/ve-chung-toi">@L["menu_au_detail"]</a>
                            <a class="dropdown-item" href="/gia-tri-cot-loi">@L["menu_au_core"]</a>
                            <a class="dropdown-item" href="/tam-nhin-su-menh">@L["menu_au_vision"]</a>
                            <a class="dropdown-item" href="/co-hoi-nghe-nghiep">@L["menu_au_job"]</a>
                        </div>
                    </li>
                    <li class="nav-item @ActiveMenu("franchise")"><a href="/nhuong-quyen" class="nav-link">@L["menu_franchise"]</a></li>
                    <li class="nav-item dropdown @ActiveMenu("product-menu")">
                        <a class="nav-link dropdown-toggle" id="product-dropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">@L["menu_product"]</a>

                        <div class="dropdown-menu" aria-labelledby="product-dropdown">
                            @foreach (var type in Model.ProductTypes)
                            {
                                <a class="dropdown-item" href="/san-pham?type=@type.Id">@type.Name</a>
                            }
                        </div>
                    </li>
                    <li class="nav-item @ActiveMenu("system")"><a href="/he-thong-aplus-coffee" class="nav-link">@L["menu_system"]</a></li>
                    <li class="nav-item @ActiveMenu("contact")"><a href="/lien-he" class="nav-link">@L["menu_contact"]</a></li>
                    <li class="nav-item search" onclick="showSearchInp()">
                        <a class="nav-link">
                            <span class="icon icon-search">
                            </span>
                        </a>
                    </li>
                    @{
                        var returnUrl = string.IsNullOrEmpty(Context.Request.Path) ? "/"
                        : $"{Context.Request.Path.Value + Context.Request.QueryString}";
                        returnUrl = Html.UrlEncoder.Encode(returnUrl);
                        var currentCulture = CultureHelper.CurrentLang;
                    }
                    <li class="nav-item">
                        <div class="language-box nav-link d-inline-block">
                            <div class="language-container">
                                <a class="language
                                   @(currentCulture.ToLower().Equals("vi")?"text-white":"")" href="/language?culture=vi&return_url=@returnUrl">
                                    <b>VI</b>
                                </a>
                                &nbsp;|&nbsp;
                                <a class="language
                                   @(currentCulture.ToLower().Equals("en")?"text-white":"")" href="/language?culture=en&return_url=@returnUrl">
                                    <b>EN</b>
                                </a>
                            </div>
                        </div>
                    </li>
                </ul>
            </div>
            <div class="search-overlay" onclick="closeSearchInp()">
                <form action="/ket-qua-tim-kiem" method="get">
                    <div class="form-group search-inp w-100">
                        <input type="text" name="q" onclick="event.stopPropagation()"
                               class="form-control color-gold" placeholder="@L["txt_search_placeholder"]">
                        <span class="icon icon-search p-4"
                              onclick="event.stopPropagation();$('.search-overlay form').submit()"></span>
                    </div>
                </form>
            </div>
        </div>
    </nav>
