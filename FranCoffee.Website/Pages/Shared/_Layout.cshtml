    <style>
        html, body {
            font-family: 'Arial', sans-serif;
            color: #BBB !important;
        }

        @@media (max-width: 768px) {
            html, body {
                overflow-x: hidden;
            }

            .ftco-navbar-light {
                max-height: 100vh;
                overflow-y: scroll
            }
        }


        .body-font {
            font-family: 'Arial', sans-serif !important;
        }

        .owl-carousel .owl-stage, .owl-carousel.owl-drag .owl-item {
            -ms-touch-action: auto;
            touch-action: auto;
        }

        .slider-content {
            background-color: rgba(0,0,0,0.6) !important;
        }

        .ftco-navbar-light {
            border-bottom: none !important;
        }

            .ftco-navbar-light.scrolled {
                /*background: rgba(0,0,0,0.7) !important;*/
            }

        .ftco-footer {
            padding: 5rem 0 0 0 !important;
        }

        .dropdown-item {
            padding: 0.5rem 1.5rem !important;
        }

        .dropdown-menu {
            top: 90% !important;
        }

        .nav-link {
            cursor: pointer;
        }

        .search-inp {
            position: absolute;
            top: 0;
            left: 0;
            padding: 0 5%;
            padding-right: 10%;
            background-color: black;
        }

            .search-inp .icon {
                position: absolute;
                top: 50%;
                transform: translateY(-50%);
                right: 10px;
                font-size: larger;
            }

                .search-inp .icon:hover {
                    color: #c49b63;
                }

        .search-overlay {
            position: fixed; /* Sit on top of the page content */
            display: none; /* Hidden by default */
            width: 100%; /* Full width (cover the whole page) */
            height: 100%; /* Full height (cover the whole page) */
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.6); /* Black background with opacity */
            z-index: 2; /* Specify a stack order in case you're using a different order for other elements */
            cursor: pointer; /* Add a pointer on hover */
        }

        .container {
            max-width: 90% !important;
        }

        .language-box:hover {
            color: white !important;
        }

        .language-box .language-container {
            background: black !important;
            padding-left: 10px;
            padding-right: 10px;
            border-radius: 7px;
            border: 1.5px solid #c49b63;
        }

        .language:hover {
            color: white !important;
        }


        @@media (min-width: 768px) {
            .ftco-navbar-light .navbar-nav > .nav-item > .nav-link {
                padding-left: 15px !important;
                padding-right: 15px !important;
            }

            .search-inp {
                padding: 1%;
                padding-right: 4%;
            }

                .search-inp .icon {
                }
        }
    </style>

    @if (IsSectionDefined("fb_meta"))
    {
        @RenderSection("fb_meta");
    }
    else
    {
        var fullUrl = Context.Request.Scheme + "://" + Context.Request.Host + Context.Request.Path;
        var fullImg = Context.Request.Scheme + "://" + Context.Request.Host + "/images/bg_1.jpg?v=31032020";
        <meta property="fb:app_id" content="192149448860613" />
        <meta property="og:url" content="@fullUrl" />
        <meta property="og:type" content="website" />
        <meta property="og:title" content="@Model.Info.Title" />
        <meta property="og:description" content="@Model.Info.Description" />
        <meta property="og:image" content="@fullImg" />
    }

    @RenderSection("custom_head", false)

</head>
<body>
